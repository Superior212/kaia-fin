# Server Configuration
NODE_ENV=development
PORT=5000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/kaia-finance
MONGODB_URI_PROD=mongodb://your-production-mongodb-uri

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Kaia Blockchain Configuration
KAIA_RPC_URL=https://public-en-kairos.node.kaia.io
KAIA_CHAIN_ID=1001
KAIA_EXPLORER_URL=https://kairos.kaiascan.io/

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=http://localhost:3000

# AI Agent Configuration
AI_AGENT_ENABLED=true
AI_ANALYSIS_INTERVAL=3600000
AI_INSIGHT_RETENTION_DAYS=30

# WebSocket Configuration
WS_PORT=5001 